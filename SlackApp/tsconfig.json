{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@backend/*": ["BackEnd/*"]
    },
    "composite": true,
    "declaration": true,
    "rootDir": ".."
  },
  "include": ["**/*.ts", "../BackEnd/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
